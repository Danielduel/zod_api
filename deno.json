{
  "name": "@olli/zod-api",
  "version": "0.9.0",
  "tasks": {
    "check": "deno check ./*.ts ./server/*.ts",
    "test": "deno test -A",
    "prep": "deno task check && deno lint && deno publish --dry-run && deno fmt && deno task test"
  },
  "imports": {
    "zod": "npm:zod@^3.22.4",
    "hono": "npm:hono@^4.1.0",
    "assert": "jsr:@std/assert@^0.219.0/assert"
  },
  "exports": {
    ".": "./mod.ts",
    "./server/hono": "./server/hono.ts",
    "./server/deno": "./server/deno.ts"
  },
  "fmt": {
    "semiColons": false,
    "exclude": ["./npm"]
  },
  "lint": {
    "exclude": ["./npm", "./t.ts"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["./tests"]
  }
}
